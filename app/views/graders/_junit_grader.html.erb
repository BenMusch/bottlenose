<%= f.hidden_field :type, value: "JunitGrader" %>

<table class="table no-first-row" style="margin-bottom: 0px;">
  <tr class="form-group">
    <td><%= f.label "avail_score", "Points available:" %></td>
    <td><%= f.spinner "avail_score", f.object.avail_score || 50, :min => 0, :delta => 5 %></td>
  </tr>
  <tr class="form-group">
    <td><%= f.label "upload_file", "Reference tests:" %></td>
    <td><%= f.file_field "upload_file" %>
      <% if f.object.upload_file %>
        <br>Current file: <%= link_to f.object.upload_file, f.object.upload_file %>
      <% end %>
    </td>
  </tr>
  <tr class="form-group">
    <td><%= f.label "params", "Test class:" %></td>
    <td><%= f.text_field "params" %></td>
  </tr>
</table>
