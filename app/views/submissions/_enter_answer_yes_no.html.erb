<div class="form-inline">
  <% value = @answers&.dig(sub_id.to_s, index, "main")&.capitalize %>
  <input type="hidden" name="answers[<%= sub_id %>][<%= index %>][main]" id="answer_<%= sub_id %>_<%= index %>" <% if value %>value="<%= value %>"<% end %>>
  <button type="button" class="answer btn btn-default <%= if value == 'Yes' then 'active' elsif @answers and value.to_s.empty? then 'unanswered' end %>"
          data-id="answer_<%= sub_id %>_<%= index %>">Yes</button>
  <button type="button" class="answer btn btn-default <%= if value == 'No' then 'active' elsif @answers and value.to_s.empty? then 'unanswered' end %>"
          data-id="answer_<%= sub_id %>_<%= index %>">No</button>
</div>

